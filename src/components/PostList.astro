---
import Layout from "../layouts/Layout.astro"
import BlogSummary from "./BlogSummary.astro"
import { type CollectionEntry, getCollection } from 'astro:content'

interface Props {
  title: string
  posts: Array<CollectionEntry<'posts'>>
  tag?: string
}

const tags = await getCollection('tags')

const { title, posts, tag: tagName } = Astro.props
---

<Layout title={title}>
  <a href="/blog" class="!no-underline" transition:name="blog-title">
    <h1 class="!mb-2">Blog</h1>
  </a>
  <div class="flex flex-row flex-wrap gap-2 mb-8">
    {tags.map((tag) => {
      const classes = ['bg-surface-400', 'text-white', 'hover:bg-surface-300', 'rounded-full', 'px-3', 'py-1', 'text-sm', 'font-semibold']
      if (tag.id === tagName) {
        classes[0] = 'bg-surface-300'
      }
      return (
        <a href={`/blog/${tag.id}`} class={classes.join(' ')} transition:name={`blog-tag-${tag.id}`}>#{tag.id}</a>
      )
    })}
  </div>
  <div class="flex flex-col">
    {posts.map((post, i) => {
      if (i < posts.length - 1) {
        return (
          <BlogSummary post={post} />
          <hr />
        )
      }
      return (
        <BlogSummary post={post} />
      )
    })}
  </div>
</Layout>
