---
interface Props {
  slug: string;
  title: string;
  subtitle?: string;
  date: Date;
  description?: string;
}

const { slug, title, subtitle, date, description } = Astro.props;
---

<div class="w-full flex flex-col gap-4 no-underline prose-headings:m-0 prose-p:m-0 prose-p:text-white">
  <div class="flex flex-col">
    <h2 class="hover:underline"><a href={slug} class="not-prose">{title}</a></h2>
    {!!subtitle && <h3>{subtitle}</h3>}
    <time datetime={date.toISOString()} class="text-surface-200">{date.toISOString().slice(0, 10)}</time>
  </div>
  {!!description && <p>{description}</p>}
  <a href={slug}>Read more...</a>
</div>
